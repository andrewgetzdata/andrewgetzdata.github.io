---
// Base Layout - Foundation for all pages
// Implements Geist design system and Swiss design principles

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
}

const {
  title,
  description = "Andrew Getz's portfolio and personal website - Developer, Data Analyst & Storyteller from Columbus, Ohio",
  ogImage,
  canonical,
  type = 'website',
  publishedTime,
  modifiedTime,
  tags = []
} = Astro.props;

// Generate canonical URL
const siteUrl = Astro.site || 'https://andrewgetz.dev';
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl);

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": type === 'article' ? "Article" : "WebSite",
  "name": title,
  "description": description,
  "url": canonicalURL.toString(),
  ...(type === 'website' ? {
    "author": {
      "@type": "Person",
      "name": "Andrew Getz",
      "url": "https://andrewgetz.dev",
      "jobTitle": "Developer & Data Analyst",
      "knowsAbout": ["Web Development", "Data Analysis", "JavaScript", "Python", "Astro"],
      "sameAs": [
        "https://github.com/andrewgetz",
        "https://linkedin.com/in/andrewgetz"
      ]
    }
  } : {}),
  ...(publishedTime ? { "datePublished": publishedTime } : {}),
  ...(modifiedTime ? { "dateModified": modifiedTime } : {}),
  ...(ogImage ? { "image": ogImage } : {})
};

// Import components
import ThemeToggle from '../components/ThemeToggle.astro';
import Analytics from '../components/Analytics.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" href="/favicon.ico" />
  <meta name="generator" content={Astro.generator} />

  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  <meta name="author" content="Andrew Getz" />
  {tags.length > 0 && <meta name="keywords" content={tags.join(', ')} />}

  <!-- Open Graph -->
  <meta property="og:type" content={type} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:site_name" content="Andrew Getz" />
  <meta property="og:locale" content="en_US" />
  {ogImage && <meta property="og:image" content={ogImage} />}
  {ogImage && <meta property="og:image:alt" content={title} />}
  {publishedTime && <meta property="article:published_time" content={publishedTime} />}
  {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
  {tags.map(tag => <meta property="article:tag" content={tag} />)}

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@andrewgetz" />
  <meta name="twitter:creator" content="@andrewgetz" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  {ogImage && <meta name="twitter:image" content={ogImage} />}

  <!-- Additional SEO -->
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Analytics -->
  <Analytics />

  <!-- Preload Critical Resources -->
  <link rel="preconnect" href="https://fonts.vercel.app" />

  <!-- Import Design System Styles -->
  <link rel="stylesheet" href="/fonts.css" />
  <link rel="stylesheet" href="/design-system.css" />
</head>

<body>
  <!-- Skip to main content for accessibility -->
  <a href="#main" class="skip-link">Skip to main content</a>

  <!-- Header with Navigation and Theme Toggle -->
  <header class="site-header">
    <nav class="nav">
      <div class="nav-brand">
        <a href="/" class="brand-link">Andrew Getz</a>
      </div>

      <div class="nav-right">
        <a href="/work" class="nav-link">Work</a>
        <a href="/resume" class="nav-link">Resume</a>
        <ThemeToggle />
      </div>
    </nav>
  </header>

  <!-- Main Content Area -->
  <main id="main" class="main-content">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <p class="footer-text">
        &copy; {new Date().getFullYear()} Andrew Getz. Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.
      </p>
    </div>
  </footer>

  <!-- Theme initialization script - runs before page render -->
  <script is:inline>
    (function() {
      var stored = localStorage.getItem('theme');
      var systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      var theme = stored || (systemDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</body>
</html>

<style>
  /* Skip Link for Accessibility */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: var(--accent-secondary);
    color: var(--text-inverse);
    padding: var(--space-2) var(--space-4);
    text-decoration: none;
    border-radius: var(--radius);
    z-index: 1000;
    transition: top var(--transition-fast);
  }

  .skip-link:focus {
    top: 6px;
  }

  /* Header Styles - Flat nav, flows with content */
  .site-header {
    max-width: 48rem;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-6) 0;
  }

  .brand-link {
    font-family: var(--font-pixel-circle);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    -webkit-font-smoothing: none;
    -moz-osx-font-smoothing: unset;
    transition: color var(--transition-fast);
  }

  .brand-link:hover {
    color: var(--accent-secondary);
    text-decoration: none;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .nav-link {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    padding: var(--space-2) 0;
  }

  .nav-link:hover {
    color: var(--text-primary);
    text-decoration: none;
  }

  /* Main Content */
  .main-content {
    flex: 1;
    min-height: calc(100vh - 8rem);
  }

  /* Footer */
  .site-footer {
    border-top: 1px solid var(--border-primary);
    margin-top: auto;
  }

  .footer-text {
    text-align: center;
    color: var(--text-tertiary);
    font-size: var(--text-sm);
    padding: var(--space-8) 0;
    margin: 0;
  }

  .footer-text a {
    color: var(--text-secondary);
    transition: color var(--transition-fast);
  }

  .footer-text a:hover {
    color: var(--accent-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .site-header {
      padding: 0 var(--space-4);
    }

    .nav {
      padding: var(--space-4) 0;
    }

    .brand-link {
      font-size: var(--text-lg);
    }

    .nav-right {
      gap: var(--space-4);
    }

    .nav-link {
      font-size: var(--text-sm);
    }

    .footer-text {
      padding: var(--space-6) 0;
      font-size: var(--text-xs);
    }
  }
</style>
