---
// Homepage - Andrew Getz Portfolio
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Andrew Getz - Developer & Data Analyst"
  description="Personal portfolio of Andrew Getz - developer, data analyst, and storyteller from Columbus, Ohio."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Andrew Getz</h1>
        <p class="hero-subtitle">Developer, Data Analyst & Storyteller</p>
        <p class="hero-description">
          Building digital experiences and uncovering insights from data.
          Based in Columbus, Ohio.
        </p>

        <!-- Quick Links -->
        <div class="hero-actions">
          <a href="/about" class="btn btn-primary">About Me</a>
          <a href="/work" class="btn btn-secondary">View Work</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Design System Demo Section -->
  <section class="demo-section">
    <div class="container">
      <div class="stack-large">
        <h2>Geist Design System Demo</h2>

        <div class="typography-demo">
          <h3>Typography Scale</h3>
          <div class="stack">
            <h1>Heading 1 - Primary Title</h1>
            <h2>Heading 2 - Section Title</h2>
            <h3>Heading 3 - Subsection</h3>
            <h4>Heading 4 - Component Title</h4>
            <p>
              This is body text using <strong>Geist Sans</strong> with proper line height
              and spacing following Swiss design principles. The text maintains excellent
              readability across different screen sizes.
            </p>
            <p>
              Code elements use <code>Geist Mono</code> for optimal monospace rendering:
              <code>npm run dev</code>
            </p>
          </div>
        </div>

        <div class="colors-demo">
          <h3>Color System</h3>
          <div class="color-grid">
            <div class="color-swatch bg-primary">Primary Background</div>
            <div class="color-swatch bg-secondary">Secondary Background</div>
            <div class="color-swatch bg-tertiary">Tertiary Background</div>
          </div>
        </div>

        <div class="spacing-demo">
          <h3>Spacing System</h3>
          <div class="spacing-examples">
            <div class="space-example space-4">Space 4 (1rem)</div>
            <div class="space-example space-8">Space 8 (2rem)</div>
            <div class="space-example space-12">Space 12 (3rem)</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-16) 0;
    border-bottom: 1px solid var(--border-primary);
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-size: var(--text-5xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
    font-weight: 500;
  }

  .hero-description {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius);
    font-size: var(--text-base);
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition);
    border: 1px solid;
  }

  .btn-primary {
    background-color: var(--text-primary);
    color: var(--bg-primary);
    border-color: var(--text-primary);
  }

  .btn-primary:hover {
    background-color: var(--text-secondary);
    border-color: var(--text-secondary);
    text-decoration: none;
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--text-primary);
    border-color: var(--border-primary);
  }

  .btn-secondary:hover {
    background-color: var(--bg-hover);
    border-color: var(--border-hover);
    text-decoration: none;
  }

  /* Demo Section */
  .demo-section {
    padding: var(--space-16) 0;
  }

  .typography-demo,
  .colors-demo,
  .spacing-demo {
    padding: var(--space-6);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    background-color: var(--bg-secondary);
  }

  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .color-swatch {
    padding: var(--space-4);
    border-radius: var(--radius);
    text-align: center;
    font-weight: 500;
    font-size: var(--text-sm);
  }

  .bg-primary {
    background-color: var(--bg-primary);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
  }

  .bg-secondary {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
  }

  .bg-tertiary {
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
  }

  .spacing-examples {
    margin-top: var(--space-4);
  }

  .space-example {
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-2);
  }

  .space-4 { padding: var(--space-4); }
  .space-8 { padding: var(--space-8); }
  .space-12 { padding: var(--space-12); }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: var(--space-16) 0 var(--space-12) 0;
    }

    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .btn {
      padding: var(--space-2) var(--space-4);
      font-size: var(--text-sm);
    }

    .color-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
