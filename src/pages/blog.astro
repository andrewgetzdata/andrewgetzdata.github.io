---
// Blog Page - Andrew Getz Portfolio
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all blog posts, sorted by date (newest first)
const allPosts = await getCollection('blog');
const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get unique tags for sidebar
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))];

// Format date helper
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout
  title="Blog - Andrew Getz"
  description="Articles and thoughts on development, data analysis, and the intersection of technology and storytelling."
>
  <div class="blog-content">
    <div class="container">
      <div class="blog-header">
        <h1 class="page-title">Blog</h1>
        <p class="page-subtitle">
          Thoughts on development, data analysis, and the intersection of technology and storytelling.
        </p>
      </div>

      <div class="blog-grid">
        <div class="blog-main">
          {publishedPosts.length > 0 ? (
            <div class="posts-list">
              {publishedPosts.map((post) => (
                <article class="post-card">
                  <div class="post-header">
                    <h2 class="post-title">
                      <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                    </h2>
                    <div class="post-meta">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {formatDate(post.data.pubDate)}
                      </time>
                      {post.data.featured && <span class="featured-badge">Featured</span>}
                    </div>
                  </div>

                  <p class="post-description">{post.data.description}</p>

                  {post.data.tags.length > 0 && (
                    <div class="post-tags">
                      {post.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}

                  <div class="post-actions">
                    <a href={`/blog/${post.slug}/`} class="read-more">Read More</a>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="no-posts">
              <h2>No posts published yet</h2>
              <p>
                Check back soon for articles about development, data analysis, and
                the intersection of technology and storytelling.
              </p>
            </div>
          )}
        </div>

        <div class="blog-sidebar">
          <div class="sidebar-card">
            <h3>About This Blog</h3>
            <p>
              I write about web development, data analysis, and the process
              of building meaningful digital experiences.
            </p>
            <a href="/contact" class="btn btn-primary">Get In Touch</a>
          </div>

          {allTags.length > 0 && (
            <div class="sidebar-card">
              <h3>Topics</h3>
              <div class="topics-grid">
                {allTags.map((tag) => (
                  <span class="topic-tag">{tag}</span>
                ))}
              </div>
            </div>
          )}

          <div class="sidebar-card">
            <h3>Latest Posts</h3>
            <div class="recent-posts">
              {publishedPosts.slice(0, 3).map((post) => (
                <div class="recent-post">
                  <h4>
                    <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                  </h4>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .blog-content {
    padding: var(--space-16) 0;
  }

  .blog-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .post-card {
    background-color: var(--bg-secondary);
    padding: var(--space-8);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    transition: border-color var(--transition), transform var(--transition);
  }

  .post-card:hover {
    border-color: var(--border-hover);
    transform: translateY(-2px);
  }

  .post-header {
    margin-bottom: var(--space-4);
  }

  .post-title {
    margin: 0 0 var(--space-2) 0;
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: var(--leading-tight);
  }

  .post-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .post-title a:hover {
    color: var(--accent-secondary);
    text-decoration: none;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }

  .featured-badge {
    background-color: var(--accent-secondary);
    color: var(--text-inverse);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 500;
  }

  .post-description {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tag {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-weight: 500;
  }

  .post-actions {
    display: flex;
    justify-content: flex-end;
  }

  .read-more {
    color: var(--accent-secondary);
    font-size: var(--text-sm);
    font-weight: 500;
    text-decoration: none;
    transition: text-decoration var(--transition-fast);
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-16);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
  }

  .no-posts h2 {
    color: var(--text-primary);
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .no-posts p {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    position: sticky;
    top: calc(4rem + var(--space-8));
  }

  .sidebar-card {
    background-color: var(--bg-secondary);
    padding: var(--space-6);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
  }

  .sidebar-card h3 {
    color: var(--text-primary);
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .sidebar-card p {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius);
    font-size: var(--text-sm);
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition);
    border: 1px solid;
  }

  .btn-primary {
    background-color: var(--text-primary);
    color: var(--bg-primary);
    border-color: var(--text-primary);
  }

  .btn-primary:hover {
    background-color: var(--text-secondary);
    border-color: var(--text-secondary);
    text-decoration: none;
  }

  .topics-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .topic-tag {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-weight: 500;
    border: 1px solid var(--border-secondary);
  }

  .recent-posts {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .recent-post h4 {
    margin: 0 0 var(--space-1) 0;
    font-size: var(--text-sm);
    font-weight: 500;
  }

  .recent-post h4 a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .recent-post h4 a:hover {
    color: var(--accent-secondary);
    text-decoration: none;
  }

  .recent-post time {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-content {
      padding: var(--space-12) 0;
    }

    .blog-header {
      margin-bottom: var(--space-12);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .page-subtitle {
      font-size: var(--text-base);
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .coming-soon {
      padding: var(--space-8);
    }

    .preview-topics {
      grid-template-columns: 1fr;
    }

    .blog-sidebar {
      position: static;
    }
  }
</style>