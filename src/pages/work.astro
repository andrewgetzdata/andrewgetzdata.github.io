---
// Work Page - Andrew Getz Portfolio
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all projects, sorted by date (newest first)
const allProjects = await getCollection('projects');
const publishedProjects = allProjects
  .filter(project => project.data.status !== 'archived')
  .sort((a, b) => b.data.startDate.valueOf() - a.data.startDate.valueOf());

// Get featured projects
const featuredProjects = publishedProjects.filter(project => project.data.featured);

// Format date helper
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long'
  });
}

// Format status helper
function formatStatus(status: string): string {
  return status.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase());
}
---

<BaseLayout
  title="Work - Andrew Getz"
  description="Projects and work by Andrew Getz - web development, data analysis, and digital experiences."
>
  <div class="work-content">
    <div class="container">
      <div class="work-header">
        <h1 class="page-title">Work & Projects</h1>
        <p class="page-subtitle">
          A collection of projects showcasing development, data analysis, and digital storytelling.
        </p>
      </div>

      <div class="work-grid">
        <div class="work-main">
          {publishedProjects.length > 0 ? (
            <div class="projects-section">
              {featuredProjects.length > 0 && (
                <section class="featured-projects">
                  <h2>Featured Projects</h2>
                  <div class="projects-grid">
                    {featuredProjects.map((project) => (
                      <article class="project-card featured">
                        <div class="project-header">
                          <div class="project-meta">
                            <span class="project-category">{formatStatus(project.data.category)}</span>
                            <span class="project-status">{formatStatus(project.data.status)}</span>
                          </div>
                          <h3 class="project-title">
                            <a href={`/work/${project.slug}/`}>{project.data.title}</a>
                          </h3>
                          <div class="project-dates">
                            {formatDate(project.data.startDate)}
                            {project.data.endDate && ` - ${formatDate(project.data.endDate)}`}
                          </div>
                        </div>

                        <p class="project-description">{project.data.description}</p>

                        <div class="project-technologies">
                          {project.data.technologies.slice(0, 4).map((tech) => (
                            <span class="tech-tag">{tech}</span>
                          ))}
                          {project.data.technologies.length > 4 && (
                            <span class="tech-more">+{project.data.technologies.length - 4}</span>
                          )}
                        </div>

                        <div class="project-actions">
                          <a href={`/work/${project.slug}/`} class="project-link">View Details</a>
                          {project.data.url && (
                            <a href={project.data.url} target="_blank" rel="noopener" class="project-link external">
                              Live Project
                            </a>
                          )}
                        </div>
                      </article>
                    ))}
                  </div>
                </section>
              )}

              <section class="all-projects">
                <h2>All Projects</h2>
                <div class="projects-list">
                  {publishedProjects.map((project) => (
                    <article class="project-item">
                      <div class="project-item-header">
                        <h3 class="project-item-title">
                          <a href={`/work/${project.slug}/`}>{project.data.title}</a>
                        </h3>
                        <div class="project-item-meta">
                          <span class="project-category">{formatStatus(project.data.category)}</span>
                          <span class="project-dates">
                            {formatDate(project.data.startDate)}
                            {project.data.endDate && ` - ${formatDate(project.data.endDate)}`}
                          </span>
                        </div>
                      </div>

                      <p class="project-item-description">{project.data.description}</p>

                      <div class="project-item-footer">
                        <div class="project-technologies">
                          {project.data.technologies.slice(0, 3).map((tech) => (
                            <span class="tech-tag small">{tech}</span>
                          ))}
                          {project.data.technologies.length > 3 && (
                            <span class="tech-more">+{project.data.technologies.length - 3}</span>
                          )}
                        </div>
                        <a href={`/work/${project.slug}/`} class="project-link">View Details</a>
                      </div>
                    </article>
                  ))}
                </div>
              </section>
            </div>
          ) : (
            <div class="no-projects">
              <h2>No projects published yet</h2>
              <p>
                Check back soon for detailed case studies of web applications,
                data analysis projects, and digital experiences.
              </p>
            </div>
          )}

          <!-- Project Categories Preview -->
