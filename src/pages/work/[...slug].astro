---
// Dynamic Project Page
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
};

type Props = {
  data: any;
  render: any;
  slug: string;
};

const project = Astro.props;
const { Content } = await project.render();

// Format date as YYYY-MM-DD
function formatDate(date: Date): string {
  const y = date.getFullYear();
  const m = String(date.getMonth() + 1).padStart(2, '0');
  const d = String(date.getDate()).padStart(2, '0');
  return `${y}-${m}-${d}`;
}

// Format category for display
function formatCategory(category: string): string {
  return category.replace('-', ' ');
}
---

<BaseLayout
  title={`${project.data.title} - Andrew Getz`}
  description={project.data.description}
  ogImage={project.data.image?.src}
>
  <article class="project-detail">
    <div class="container">
      <div class="project-content">
        <!-- Project Header -->
        <header class="project-header">
          <h1 class="project-title">{project.data.title}</h1>

          <div class="post-meta">
            <time datetime={project.data.startDate.toISOString()}>
              {formatDate(project.data.startDate)}
            </time>
            <span class="meta-sep">|</span>
            <span class="badge badge-gray-subtle">{project.data.type || 'work'}</span>
            <span class="meta-sep">|</span>
            <span class="badge badge-teal-subtle">{formatCategory(project.data.category)}</span>
            {project.data.view_source && (
              <>
                <span class="meta-sep">|</span>
                <a href={project.data.view_source} target="_blank" rel="noopener noreferrer" class="source-link">view source â†—</a>
              </>
            )}
          </div>

          {project.data.tags.length > 0 && (
            <div class="post-tags">
              {project.data.tags.map((tag: string) => (
                <span class="badge badge-amber-subtle">{tag}</span>
              ))}
            </div>
          )}
        </header>

        <!-- Dashed divider -->
        <div class="dashed-divider" aria-hidden="true">
          ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </div>

        <!-- Project Body -->
        <div class="project-body">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .project-detail {
    padding: var(--space-12) 0;
  }

  .project-content {
    max-width: 48rem;
    margin: 0 auto;
  }

  .project-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .project-title {
    font-family: var(--font-pixel-square);
    font-weight: 500;
    font-size: var(--text-4xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    line-height: 1.2;
    letter-spacing: 0.02em;
    text-transform: lowercase;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-2);
    font-family: var(--font-geist-mono);
    font-size: var(--text-sm);
    color: var(--text-tertiary);
    margin-bottom: var(--space-5);
  }

  .meta-sep {
    color: var(--text-tertiary);
    opacity: 0.5;
  }

  .source-link {
    font-family: var(--font-geist-mono);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .source-link:hover {
    color: var(--text-primary);
    text-decoration: underline;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .dashed-divider {
    font-family: var(--font-geist-mono);
    color: var(--text-tertiary);
    font-size: var(--text-xs);
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
    margin-bottom: var(--space-10);
    opacity: 0.5;
    line-height: 1;
  }

  .project-body {
    line-height: var(--leading-relaxed);
  }

  /* Project Content Styling */
  .project-body :global(h1),
  .project-body :global(h2),
  .project-body :global(h3),
  .project-body :global(h4),
  .project-body :global(h5),
  .project-body :global(h6) {
    color: var(--text-primary);
    font-weight: 600;
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    line-height: var(--leading-tight);
  }

  .project-body :global(h2) {
    font-size: var(--text-2xl);
    border-bottom: 1px solid var(--border-secondary);
    padding-bottom: var(--space-2);
  }

  .project-body :global(h3) {
    font-size: var(--text-xl);
  }

  .project-body :global(h4) {
    font-size: var(--text-lg);
  }

  .project-body :global(p) {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
  }

  .project-body :global(a) {
    color: var(--accent-secondary);
    text-decoration: none;
  }

  .project-body :global(a:hover) {
    text-decoration: underline;
  }

  .project-body :global(code) {
    background-color: var(--bg-tertiary);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-family: var(--font-geist-mono);
    font-size: 0.875em;
    color: var(--text-primary);
  }

  .project-body :global(pre) {
    background-color: var(--bg-tertiary);
    padding: var(--space-6);
    border-radius: var(--radius);
    overflow-x: auto;
    margin: var(--space-6) 0;
    border: 1px solid var(--border-primary);
  }

  .project-body :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: var(--text-sm);
  }

  .project-body :global(ul),
  .project-body :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .project-body :global(li) {
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
  }

  .project-body :global(blockquote) {
    border-left: 4px solid var(--accent-secondary);
    padding: var(--space-4) var(--space-6);
    margin: var(--space-6) 0;
    background-color: var(--bg-secondary);
    border-radius: var(--radius);
  }

  .project-body :global(blockquote p) {
    margin: 0;
    font-style: italic;
    color: var(--text-primary);
  }

  .project-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .project-detail {
      padding: var(--space-8) 0;
    }

    .project-title {
      font-size: var(--text-3xl);
    }
  }
</style>
